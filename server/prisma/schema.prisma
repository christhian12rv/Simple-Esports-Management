generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  players   Player[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Player {
  id        Int       @id @default(autoincrement())
  name      String
  age       Int
  team      Team?      @relation(fields: [teamId], references: [id], onDelete: SetNull)
  teamId    Int?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}